<h1>顧客一覧</h1>
<%= search_form_for @q, url: search_admin_users_path do |f| %>
  <%= f.search_field :name_eq, placeholder: 'ユーザー名' %>
  <%= f.submit "検索" %>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">氏名</th>
      <th scope="col">メールアドレス</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <% @users.each do |user| %>
    <tbody>
      <tr>
        <% if user.is_user == true %>
          <td>ユーザー</td>
        <% elsif user.is_user == false %>
            <td><%= user.brand.brand_name %>スタッフ</td>
        <% end %>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.email == 'guest@example.com' %>
            <p></p>
          <% else %>
            <%= link_to "詳細", admin_user_path(user.id) %>
          <% end %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>
