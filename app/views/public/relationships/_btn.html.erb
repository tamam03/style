<% if current_user.following?(user) %>
  <%= button_to "un follow", public_user_relationships_path(user.id), method: :delete, class: "btn btn btn-secondary followed" %>
<% else %>
  <%= button_to "follow", public_user_relationships_path(user.id), method: :post, class: "btn btn btn-secondary following" %>
<% end %>

<style>
.btn-secondary.following{
  border-radius: 7px;
  background: #e6bfb2;
}

.btn-secondary.followed{
  border-radius: 7px;
  background: #6f5436;
}
</style>