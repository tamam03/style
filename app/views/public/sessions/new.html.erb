<div class="public-sign-in">
  <div class="container">
    <div class="row p-5">
      <div class="form">
        <%= form_with model: @user, url: session_path(resource_name) do |f| %>
          <%= render 'public/shared/error_messages', object: f.object %>
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "\uf0e0 Email", class: 'fa' %>
            </div>
            <div class="field">
              <%= f.password_field :password, autocomplete: "current-password", placeholder: "password" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <div class="col-12 p-2">
              <%= f.submit "Log in", class: "btn btn-secondary" %>
            </div>
          <% end %>
        <div class="col-12 p-2">
          <%= render "public/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  main{
    background-image: none;
  }
  .row{
    justify-content: center;
  }

  input.fa{
    height: 30px;
    width: 250px;
  }

  .btn-secondary{
    padding: 10px 70px;
    font-weight: 700;
    background: #CCCC99;
    border: 3px solid #FFFFFF;
    color: #FFFFFF;
 }

 .field{
  padding-top: 20px;
}

</style>
