<div class="user-page">
  <div class="container">
    <div class="row p-5">
      <% if @user.is_user == true %>
        <div class="form">
          <%= form_with model: @user, url: public_user_path(@user), method: :patch do |f| %>
            <%= render "public/shared/error_messages", object: f.object %>
            <div class="image">
              <%= f.label :profile_image %><br>
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: 'image/*' %>
            </div>
            <div class="field">
              <%= f.label :name %><br>
              <%= f.text_field :name %>
            </div>
            <div class="field">
              <%= f.label :name_kana %><br>
              <%= f.text_field :name_kana %>
            </div>
            <div class="field">
              <%= f.label :nick_name %><br>
              <%= f.text_field :nick_name %>
            </div>
            <div class="field">
              <%= f.label :email %><br>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <div class="row p-3">
              <%= f.submit "Edit", class: "btn btn-secondary edit" %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="form">
          <%= form_with model: @user, url: public_user_path(@user), method: :patch do |f| %>
          <%= render "public/shared/error_messages", object: f.object %>
            <div class="image">
              <%= f.label :profile_image %><br>
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: 'image/*' %>
            </div>
            <div class="field">
              <%= f.label :name %><br>
              <%= f.text_field :name %>
            </div>
            <div class="field">
              <%= f.label :name_kana %><br>
              <%= f.text_field :name_kana %>
            </div>
            <div class="field">
              <%= f.label :email %><br>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <div class="row p-3">
              <%= f.submit "Edit", class: "btn btn-secondary edit" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
main{
  background-image: none;
  color: #719bad;
 }

.row{
  justify-content: center;
}

.btn-secondary.edit{
  background: #88b5d3;
  padding: 10px 70px;
}

label{
  font-weight: 700;
}

.field{
  padding-top: 20px;
}

</style>
