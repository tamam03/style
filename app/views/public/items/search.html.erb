<div class="container">
  <div class="row p-3">
    <%= search_form_for @d, url: search_public_items_path, class: "search-form" do |f| %>
      <%= f.collection_select(:brand_id_eq, @brands, :id, :brand_name) %>
      <%= f.submit "検索" %>
    <% end %>
  </div>
</div>

<div class="container">
<div class="row item-cards">
   <% if @results.present? %>
      <% @results.each do |item| %>
      <div class="item-card">
        <%= link_to public_item_path(item) do %>
         <%= image_tag item.get_item_image(400, 400) %>
        <% end %>
        <% unless item.user == current_user %>
         <div id="favorite_btns_<%= item.id %>" class="btn_mark">
          <%= render "public/favorites/btn", item: item %>
         </div>
        <% end %>
        <% if item.user == current_user %>
         <div class="btn_mark">
          <%= link_to public_item_path(item), method: :delete, data: { confirm: "削除しますか？" } do %>
           <i class="far fa-trash-alt fa-lg"></i>
          <% end %>
         </div>
        <% end %>
      </div>
     <% end %>
    </div>
    <% else %>
      <p>検索結果がありません</p>
    <% end %>
  </div>
  <div class="row p-3 d-flex justify-content-center">
   <%= paginate @results %>
  </div>
</div>

<style>
main{
  min-height: 1500px;
}

.pagination>li>a {
  border: none;
  color: #696969;
}

.pagination>.active>a {
  background: #CC99CC;
  border-radius: 15px;
}

.pagination>li>a:hover {
  border-radius: 15px;
}

.page-item.active .page-link {
  background-color: #CC99CC;
  border-color: #CC99CC;
}

.img{
 position: relative;
}

.btn_mark {
  position: absolute;
  right: 8px;
  bottom: 8px;
}
</style>
