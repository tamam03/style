<div class="container">
  <div class="row d-flex justify-content-center p-5">
    <div class="item-edit-form">
      <%= form_with model: @item, url: public_item_path(@item), method: :patch do |f| %>
        <table>
          <tbody>
            <div class="col-12">
              <tr>
                <div class="images">
                  <th><%= f.label :投稿画像 %></th>
                  <td><%= f.file_field :item_image, placeholder: "画像", accept: 'image/*' %></td>
                </div>
              </tr>
            </div>
            <div class="col-12">
              <tr>
                <div class="field">
                  <th><%= f.label :説明文 %></th>
                  <td><%= f.text_field :text %></td>
                </div>
              </tr>
            </div>
            <div class="col-12">
              <tr>
                <div class="select">
                  <th><%= f.label :ブランド %></th>
                  <td><%= f.select :brand_id, options_from_collection_for_select(Brand.all, :id, :brand_name) %></td>
                </div>
              </tr>
            </div>
            <div class="col-12">
              <tr>
                <div class="select">
                  <th><%= f.label :ステータス %></th>
                  <td><%= f.select :status, Item.statuses.keys.map { |k| [t("enums.item.status.#{k}"), k] } %></td>
                </div>
              </tr>
            </div>
          <td><%= f.submit "変更する" %></td>
        </tr>
      </div>
    <% end %>
    </tbody>
   </table>
   </div>
  </div>
 </div>

<style>
.item-edit-form{
  background-color: #EEEEEE;
  padding: 40px;
  border:  3px solid;
  border-radius: 8px;
  border-color: #999966;
  box-shadow: 16px 16px 42px #666666;
}
</style>
