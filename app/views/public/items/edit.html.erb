<div class="container">
  <div class="row p-5">
    <div class="form">
      <%= form_with model: @item, url: public_item_path(@item), method: :patch do |f| %>
        <div class="image">
          <%= f.label :item_image %><br>
          <%= f.file_field :item_image, placeholder: "画像", accept: 'image/*' %>
        </div>
        <div class="field">
          <%= f.label :text %><br>
          <%= f.text_field :text, class: 'form-control' %>
        </div>
        <div class="select">
          <%= f.label :brand %><br>
          <%= f.select :brand_id, options_from_collection_for_select(Brand.all, :id, :brand_name) %>
        </div>
        <div class="select">
          <%= f.label :status %><br>
          <%= f.select :status, Item.statuses.keys.map { |k| [t("enums.item.status.#{k}"), k] } %>
        </div>
        <div class="row p-3">
          <%= f.submit "Edit", class: "btn btn-secondary edit" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
main{
  color: #941f57;
  background: #debecc;
}

.row{
  justify-content: center;
}

.btn-secondary.edit{
  background: #b0778c;
  padding: 10px 70px;
}

label{
  font-weight: 700;
}

.field{
  padding-top: 20px;
}

.select{
  padding-top: 20px;
}

.form-control{
  width: 500px;
  height: 300px;
}
</style>
