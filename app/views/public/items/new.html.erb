<div class="container">
  <div class="row pt-4">
    <div class="col-12">
      <h3 class="page_title">Coordinate</h3>
      <p class="page_title_with">お気に入りのコーディネートや気になるアイテムを記録しよう</div>
    </div>
  </div>
  <div class="row">
    <div class="form">
      <%= form_with model: @item, url: public_items_path, method: :post do |f| %>
        <%= render "public/shared/error_messages", object: f.object %>
        <div class="col-12 p-3">
          <p class="item-form-text">投稿する画像を選択してください</p>
          <div class="field p-2">
            <%= f.file_field :item_image, placeholder: "投稿画像", accept: 'image/*' %>
          </div>
        </div>
        <div class="col-12">
          <p class="item-text">メモやおすすめしたい内容、欲しいアドバイスについて入力しましょう</p>
          <div class="field p-3">
            <%= f.text_area :text, class: 'form-control', size: "20x10", placeholder: "説明を入力してください" %>
          </div>
        </div>
        <div class="col-12">
          <div class="brand-select p-3">
            <%= f.select :brand_id, options_from_collection_for_select(Brand.all, :id, :brand_name), { prompt: 'ブランドを選択してください' } %>
          </div>
        </div>
        <div class="col-12">
          <div class="make_tag p-3">
            <%= f.text_field :tag_name, placeholder: "タグを入力してください" %>
          </div>
        </div>
        <div class="col-12">
          <div class="select p-3">
            <%= f.select :status, Item.statuses.keys.map { |k| [t("enums.item.status.#{k}"), k] }, { prompt: 'ステータスを選択してください' } %>
          </div>
        </div>
        <div class="col-12 d-flex justify-content-center">
          <%= f.submit "Create", class: "btn btn btn-secondary create" %>
        </div>
      <% end %>
    </div>
  </div>
 </div>

<style>
main{
  background-image: none;
  background-color: #debecc;
  min-height: 1300px;
}

.row{
  justify-content: center;
}

h3.page_title{
  text-align: center;
  position: relative;
  font-family: cursive;
  font-size: 3em;
  font-weight: 700;
  color: #6e4a55;
}

p.page_title_with{
  height: 50px;
  margin: 0 auto;
  font-weight: 700;
  text-align: center;
  color: #6e4a55;
}

p.item-form-text{
  font-weight: 400;
}

.btn-secondary.create{
  background: #b0778c;
}
</style>
