 <!--ユーザー新規登録-->
  <div class="field">
   <%= f.label :氏名 %><br />
   <%= f.text_field :name %>
  </div>
  <div class="field">
   <%= f.label :フリガナ %><br />
   <%= f.text_field :name_kana %>
  </div>

  <div id="only-customer">
   <div class="field">
    <%= f.label :ニックネーム（表示用）%><br />
    <%= f.text_field :nick_name %>
   </div>
  </div>

  <div id="only-clerk">
   <div class="field">
     <% brand_options = Brand.order(:id).map { |c| [c.name, c.id, data: { children_path: brand_stores_path(c) }] } %>
     <%= f.select :brand_id, brand_options, { include_blank: true }, class: 'select-parent' %>
   </div>
   <div class="field">
     <% stores = @user.brand.try(:stores) || [] %>
     <% store_options = stores.map { |c| [c.name, c.id] } %>
     <%= f.select :store_id, store_options, { include_blank: true }, class: 'select-children' 
   </div>
  </div>

  <div class="field">
   <%= f.label :メールアドレス %><br />
   <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
   <%= f.label :パスワード %>
   <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
   <% end %><br />
   <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <div class="field">
   <%= f.label :確認パスワード %><br />
   <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="actions mt-3">
   <%= f.submit "新規登録" %>
  </div>



