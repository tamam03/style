 <!--ユーザー新規登録-->
  <div class="field">
   <%= f.label :氏名 %><br />
   <%= f.text_field :name %>
  </div>
  <div class="field">
   <%= f.label :フリガナ %><br />
   <%= f.text_field :name_kana %>
  </div>

  <div id="only-customer">
   <div class="field">
    <%= f.label :ニックネーム（表示用）%><br />
    <%= f.text_field :nick_name %>
   </div>
  </div>

  <div id="only-clerk">
   <div class="brand-field">
    <%= f.label :所属ブランド %>
    <%= f.collection_select :brand_id, Brand.all, :id, :brand_name, prompt: "ブランドを選択してください" %>
   </div>
   <div class="store-field">
    <%= f.label :在籍店舗 %>
    <%= f.collection_select :store_id, brand.stores, :id, :store_name, prompt: "店舗を選択してください" %>
  </div>
 </div>
  <div class="field">
   <%= f.label :メールアドレス %><br />
   <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
   <%= f.label :パスワード %>
   <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
   <% end %><br />
   <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <div class="field">
   <%= f.label :確認パスワード %><br />
   <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="actions mt-3">
   <%= f.submit "新規登録" %>
  </div>






